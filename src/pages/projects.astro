---
import projects from "../collections/projects.json";
import PageHeading from "../components/page-heading.astro";
import Project from "../components/project.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="My Projects">
  <section class="relative z-20 max-w-2xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
      title="My Projects"
      description="Take a look at some of my favorite projects that showcase my passion for building impactful solutions. While most of my work involves creating custom systems for businesses, I love sharing these examples that demonstrate how I combine technical expertise with practical business needs. Each project tells a story of solving real-world challenges with innovative approaches."
    />

    <div
      class="z-50 grid items-stretch w-full grid-cols-1 my-8 gap-7 sm:gap-5 sm:grid-cols-2"
    >
      {
        projects.map((project) => {
          return (
            <Project
              name={project.name}
              description={project.description}
              image={project.image}
              url={project.url}
              stacks={project.stacks}
            />
          );
        })
      }
    </div>
  </section>
</Layout>
